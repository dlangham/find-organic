<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Add a New Comment for <strong><%=grower.name%></strong></h1>
        <div style="width: 50%; margin: 30px auto;">

            <form action="/growers/<%=grower._id%>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block">Add Comment!</button>    
                </div>
            </form>

            <a href="/growers/<%=grower._id%>/">Go Back To The <strong><%= grower.name%></strong></a>
        </div>        

    </div>
</div>

<% include ../partials/footer %>