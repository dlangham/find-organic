<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit Comment for <strong><%=grower.name%></strong></h1>
        <div style="width: 50%; margin: 30px auto;">
            <form action="/growers/<%=grower._id%>/comments/<%=comment._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text" value="<%=comment.text%>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block">Make Changes</button>    
                </div>
            </form>
            <a href="/growers/<%=grower._id%>/">Go Back To The <strong><%= grower.name%></strong></a>
        </div>        

    </div>
</div>

<% include ../partials/footer %>