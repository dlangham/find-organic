<!DOCTYPE html>
<html>
<head>
    <title>Find Organic</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <!-- <link href="/styles/lib/bootstrap-reboot.css" rel="stylesheet"> -->
    <link href="/styles/style.css" rel="stylesheet">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <!-- <div class="navbar-header"> -->
        <a class="navbar-brand" href="/">Find Organic</a>
        <!-- </div> -->
        <!-- <div class="collapse navbar-collapse"> -->
            <ul class="navbar-nav justify-content-end">
                <li class="nav-item"><a class="nav-link" href="/growers">See All Growers</a></li>
                <% if(!currentUser) { %>
                    <li class="nav-item"><a class="nav-link" href="/login">Login</a></li>
                    <li class="nav-item"><a class="nav-link" href="/register">Sign Up</a></li>
                <% } else { %>
                    <li class="nav-item"><a class="nav-link" href="#0">Signed in as: <strong><%= currentUser.username %></strong></a></li>
                    <li class="nav-item"><a class="nav-link" href="/logout">Logout</a></li>
                <% } %>
            </ul>
        <!-- </div> -->
    </div>
</nav>

<div class="container">
    <% if(messageSuccess && messageSuccess.length > 0) { %>
        <div class="alert alert-success" role="alert">
            <%= messageSuccess %>
        </div> 
    <% } %>
    <% if(messageError && messageError.length > 0) { %>
        <div class="alert alert-danger" role="alert">
            <%= messageError %>
        </div>
    <% } %>
</div>