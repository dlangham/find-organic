</nav>
<div class="topstyle"></div>

<div class="container">
    <% if(messageSuccess && messageSuccess.length > 0) { %>
        <div class="alert alert-success" role="alert">
            <%= messageSuccess %>
        </div> 
    <% } %>
    <% if(messageError && messageError.length > 0) { %>
        <div class="alert alert-danger" role="alert">
            <%= messageError %>
        </div>
    <% } %>
</div>
