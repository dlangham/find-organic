<% include ../partials/header %>

<div class="container page">
    <header class="jumbotron">
            <div class="container">
            <h1>Welcome To Find Organic!</h1>
            <p>View our selected growers from all over the world</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/growers/new">Add A Grower</a>
            </p>
        </div>
    </header>

    <div id="grower-cards" class="row justify-content-center">
        <% growers.forEach((grower) => { %>
                <div class="card">

                <!-- <div class="thumbnail"> -->
                    <img src="<%= grower.image %>" width="640" height="480">
                    
                    <div class="caption">
                        <h4><%= grower.name %></h4>
                    </div>
                    <p>
                        <a href="/growers/<%= grower._id %>" class="btn btn-primary">More Info</a>
                    </p>
                <!-- </div> -->
                    
                </div>
                <!-- /.card -->
        
        <% }); %>
        
    </div>
    
</div>

<% include ../partials/footer %>