<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit Grower: <%= grower.name %></h1>
        <div style="width: 50%; margin: 30px auto;">
            <form action="/growers/<%= grower._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="theGrower[name]" placeholder="grower name" value="<%= grower.name %>">    
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="theGrower[image]" placeholder="photo url" value="<%= grower.image %>">    
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="theGrower[description]" placeholder="description" value="<%= grower.description %>">    
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Send Changes</button>    
                </div>
            </form>
            <a href="/growers/<%= grower._id %>">Go Back To Grower Page</a>
        </div>        

    </div>
</div>

<% include ../partials/footer %>